<Page x:Class="LearnApp.Edit"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LearnApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Edit">

    <Grid>
        <StackPanel Width="250">
            <TextBlock Style="{StaticResource font}">Наименование</TextBlock>
            <TextBox Name="TbTitle"></TextBox>
            <TextBlock Style="{StaticResource font}">Стоимость</TextBlock>
            <TextBox Name="TbCost"></TextBox>
            <TextBlock Style="{StaticResource font}">Длительность (в минутах)</TextBlock>
            <TextBox Name="TbDur"></TextBox>
            <TextBlock Style="{StaticResource font}">Описание</TextBlock>
            <TextBox Name="TbDis"></TextBox>
            <TextBlock Style="{StaticResource font}">Скидка (в процентах)</TextBlock>
            <TextBox Name="TbSale"></TextBox>
            <Button Name="ButtEdit" Width="50" Margin="0,5,0,0" Click="ButtEdit_Click">Ок</Button>
        </StackPanel>
    </Grid>
</Page>
