<Window x:Class="LearnApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LearnApp"
        mc:Ignorable="d"
        Title="Леарн" Height="600" Width="650" Icon="Images/school_logo.ico" MinHeight="600" MinWidth="650">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="370"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Frame Name="FrmMain" Grid.Row="1" Grid.ColumnSpan="2" NavigationUIVisibility="Hidden"/>
        <TextBlock FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource font}">Школа иностранных языков Леарн</TextBlock>
        <Button Name="ButtAdmin" FontFamily="Comic Sans MS" Grid.Column="1" Width="100" Height="30" HorizontalAlignment="Right" Margin="0,0,15,0" Background="#04A0FF" Foreground="White" BorderThickness="0" Click="ButtAdmin_Click">Авторизация</Button>
    </Grid>
</Window>
